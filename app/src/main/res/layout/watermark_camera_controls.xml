<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.opencooffeewatermarkcamera.WatermarkCamera">

    <RelativeLayout
        android:id="@+id/top_overlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/black"
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/change_flash_mode"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="36dp"
        android:background="@null"
        android:focusable="true"
        android:clickable="true"
        android:scaleType="fitCenter"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:contentDescription="@null"
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/change_square_camera_mode"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="36dp"
        android:layout_centerInParent="true"
        android:background="@null"
        app:srcCompat="@drawable/ic_square"
        android:focusable="true"
        android:clickable="true"
        android:scaleType="fitCenter"
        android:layout_alignParentTop="true"
        android:contentDescription="@null"
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/change_rectangle_camera_mode"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="36dp"
        android:layout_centerInParent="true"
        android:background="@null"
        app:srcCompat="@drawable/ic_rectangle"
        android:focusable="true"
        android:clickable="true"
        android:scaleType="fitCenter"
        android:layout_alignParentTop="true"
        android:contentDescription="@null"
        android:visibility="invisible"/>

    <ImageButton
        android:id="@+id/change_camera_mode"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="36dp"
        android:layout_marginRight="36dp"
        android:background="@null"
        app:srcCompat="@drawable/ic_change_camera"
        android:focusable="true"
        android:clickable="true"
        android:scaleType="fitCenter"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:contentDescription="@null"
        android:visibility="invisible"/>

    <RelativeLayout
        android:id="@+id/bottom_overlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/black"
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/take_photo"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:layout_marginBottom="48dp"
        android:layout_centerInParent="true"
        android:background="@null"
        app:srcCompat="@drawable/ic_take_photo_circle"
        android:focusable="true"
        android:clickable="true"
        android:scaleType="fitCenter"
        android:layout_alignParentBottom="true"
        android:contentDescription="@null"
        android:visibility="invisible"/>

</RelativeLayout>